{
  "$schema": "https://json-schema.org/schema",
  "$id": "NxNestGatewayGenerator",
  "title": "Nest Gateway Options Schema",
  "description": "Nest Gateway Options Schema.",
  "cli": "nx",
  "type": "object",
  "properties": {
    "path": {
      "description": "Path where the gateway will be generated.",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "Where should the gateway be generated?"
    },
    "name": {
      "description": "The name of the gateway.",
      "type": "string",
      "x-prompt": "What name would you like to use?"
    },
    "skipFormat": {
      "description": "Skip formatting files.",
      "type": "boolean",
      "default": false,
      "x-priority": "internal"
    },
    "unitTestRunner": {
      "description": "Test runner to use for unit tests.",
      "type": "string",
      "enum": ["jest", "none"],
      "default": "jest"
    },
    "language": {
      "description": "Nest gateway language.",
      "type": "string",
      "enum": ["js", "ts"]
    }
  },
  "additionalProperties": false,
  "required": ["path"]
}
